<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_content"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:layout_gravity="center"
                android:layout_marginTop="48dp"
                android:contentDescription="@string/app_name"
                android:src="@mipmap/ic_launcher"
                />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48.0dip"
                android:layout_marginRight="48.0dip"
                android:layout_marginTop="48.0dip"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="2.0dip"
                android:text="洗牌加速的移动直播行业，冰火两重天"
                android:textColor="@color/text_item_title"
                android:textSize="20sp"
                android:transitionName="shareTvTitle" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32.0dip"
                android:gravity="center_horizontal"
                android:maxLines="2"
                android:text="积木先生"
                android:textSize="12sp"
                android:textColor="@color/text_offline"/>

            <TextView
                android:id="@+id/tv_summary"

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="32.0dip"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="9dp"
                android:text="这样的科技新闻是不是很无聊"
                android:textColor="@color/text_item_summary"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginTop="32dp"

            android:orientation="horizontal">

            <View
                android:layout_width="33.0dp"
                android:layout_height="1.0px"
                android:background="@color/divider" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:text="～"
                android:textColor="@color/text_item_summary"
                android:textSize="12sp" />

            <View
                android:layout_width="33.0dip"
                android:layout_height="1.0px"
                android:background="@color/divider" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="32dp">

            <WebView
                android:id="@+id/wv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </WebView>
        </LinearLayout>



</LinearLayout>






